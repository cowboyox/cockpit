# Adapted from create-guest-qcow2.  We don't use that script as is
# since it is, to quote Mr Parker, "2% code and 98% config stuff".

set -e
set -x

if [ "$#" != 2 ]; then
    echo >& "Usage: fedora-rawhide.bootstrap IMAGE ARCH"
    exit 1
fi

outdir=$(dirname $1)
out=$(basename $1)
arch=$2

cd "$outdir"

url="http://dl.fedoraproject.org/pub/fedora/linux/development/rawhide/$arch/os"

ks=fedora-rawhide.ks
cat <<EOF >$ks
install
text
shutdown
lang en_US.UTF-8
keyboard us
network --bootproto dhcp
rootpw foobar
firewall --enabled --ssh
selinux --enforcing
timezone --utc America/New_York
bootloader --location=mbr --append="console=tty0 console=ttyS0,115200 rd_NO_PLYMOUTH"
zerombr
clearpart --all --initlabel
autopart

%packages
@core
%end
EOF

qemu-img create -f qcow2 "$out" 4G
chmod o+rw "$out"
chmod o+rx .
ls -l "$out"

virsh --connect=qemu:///system shutdown fedora-rawhide-builder || true
virsh --connect=qemu:///system undefine fedora-rawhide-builder || true

virt-install --connect=qemu:///system \
             --network=network:default \
             --initrd-inject=$ks \
             --extra-args="ks=file:/$ks console=tty0 console=ttyS0,115200" \
             --name=fedora-rawhide-builder \
             --disk "path=$out,format=qcow2,cache=writeback" \
             --ram 2048 \
             --vcpus=1 \
             --os-type linux \
             --os-variant fedora21 \
             --location="$url" \
             --nographics \
             --serial=pty \
             --noreboot
